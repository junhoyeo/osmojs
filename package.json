{
  "name": "osmojs-workspace",
  "version": "0.0.1",
  "publishConfig": {
    "access": "restricted"
  },
  "private": true,
  "scripts": {
    "build": "lerna run prepare --parallel",
    "buidl": "lerna run buidl --parallel",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "codegen": "lerna run codegen --stream --scope osmojs",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@babel/cli": "7.22.9",
    "@babel/core": "7.22.9",
    "@babel/eslint-parser": "^7.22.9",
    "@pyramation/babel-preset-env": "0.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^29.6.1",
    "eslint": "8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.0.2",
    "lerna": "4.0.0",
    "prettier": "2.7.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/osmosis-labs/osmojs"
  },
  "dependencies": {
    "@jest/transform": "29.0.3"
  }
}
